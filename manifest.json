{
  "name": "__MSG_appName__",
  "version": "1.1.0",
  "manifest_version": 2,
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "icons": {
    "128": "icon/128.png"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.slack.com/*"
      ],
      "js": ["script/highlight.js", "script/starred_items.js", "script/display_unread_room_num.js"],
      "css": ["style/style.css"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
